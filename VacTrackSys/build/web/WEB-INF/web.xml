<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>DBActionServlet</servlet-name>
        <servlet-class>servlets.DBActionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewAccountServlet</servlet-name>
        <servlet-class>servlets.NewAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addRecordServlet</servlet-name>
        <servlet-class>servlets.addRecordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewAccountServlet</servlet-name>
        <url-pattern>/CDC/NewAccount</url-pattern>
        <url-pattern>/Member/NewAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addRecordServlet</servlet-name>
        <url-pattern>/addRecord</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/CDC/Login</url-pattern>
        <url-pattern>/Member/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DBActionServlet</servlet-name>
        <url-pattern>/CDC/DBAction</url-pattern>
        <url-pattern>/Member/DBAction</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Member/Login.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
